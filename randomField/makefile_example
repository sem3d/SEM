# Other Targets
clean:
		-$(RM) $(LIB1) $(EXEC) $(EXEC2) $(RF_OBJ) $(STAT_OBJ) $(COMM_OBJ) *.mod
		-@echo 'Finished excluding'

.PHONY: all clean dependents
